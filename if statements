name = input("Enter name: ")
age = int(input("Enter age: "))

if len(name) % 2 == 0:
    print("Your name has an even number of letters")
else:
    print("Your name has an odd number of letters")

isAdult = True
if age < 18:
    isAdult = False

if isAdult:
    print('You are an adult')
else:
    print('You are a child')
